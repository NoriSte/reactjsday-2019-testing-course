{
  "name": "reactjsday-2019-testing-course",
  "version": "1.0.0",
  "description": "The \\\"Testing React\\\" course of the Italian ReactJSDay 2019",
  "main": "index.js",
  "scripts": {
    "postinstall": "gitbook install && npm run realworld:install && npm run demo-app:install",
    "test": "start-server-and-test realworld:start http://localhost:4100 test:everything",
    "test:everything": "npm run test:unit && npm run demo-app:test:nowatch && npm run cy:run && npm run run:examples",
    "// BOOK ///////////": "",
    "book:serve": "npx gitbook serve",
    "book:build": "npx gitbook build . docs",
    "book:publish": "npm run book:build && git add docs && git commit -a -m \"Publish the book\" && git pull --rebase && git push",
    "postbook:publish": "node utils/print-ghpages-url.js",
    "// DEMO APP ///////////": "",
    "demo-app:install": "cd demo-app && npm i",
    "demo-app:start": "cd demo-app && npm start",
    "demo-app:build": "cd demo-app && npm run build",
    "demo-app:test": "cd demo-app && npm test",
    "demo-app:test:nowatch": "cd demo-app && npm run test:nowatch",
    "// JEST ///////////": "",
    "test:unit:watch": "jest --watchAll",
    "test:unit": "jest",
    "// CYPRESS ///////////": "",
    "cy:open": "cypress open",
    "cy:run": "cypress run --config video=false --spec \"cypress/integration/realworld/**/*\"",
    "// REALWORLD ///////////": "",
    "realworld:install": "npm run realworld:frontend:install && npm run realworld:backend:install",
    "realworld:frontend:install": "cd realworld/frontend && npm i",
    "realworld:backend:install": "cd realworld/backend && npm i",
    "realworld:start": "node utils/start-mongod.js & npm run realworld:db:start && concurrently --kill-others \"npm run realworld:backend:start\" \"npm run realworld:frontend:start\"",
    "realworld:frontend:start": "cd realworld/frontend && npm start",
    "realworld:backend:start": "cd realworld/backend && npm start",
    "realworld:db:start": "cd realworld/backend && npm run mongo:start",
    "// EXAMPLES ///////////": "",
    "run:examples": "npm-run-all -s example:**",
    "example:headless-browser": "cypress run --config video=false --spec \"cypress/integration/**/headless-browser.*\"",
    "example:signup": "cypress run --config video=false --spec \"cypress/integration/examples/signup/*\"",
    "example:signup-integration": "cypress run --config video=false --spec \"cypress/integration/examples/signup-integration/*\"",
    "example:authenticate-command": "cypress run --config video=false --spec \"cypress/integration/examples/authenticate-command/*\"",
    "example:monitoring-tests": "cypress run --config video=false --spec \"cypress/integration/examples/monitoring-tests/*\""
  },
  "jest": {
    "testPathIgnorePatterns": [
      "cypress",
      "demo-app"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NoriSte/reactjsday-2019-testing-course.git"
  },
  "keywords": [
    "course",
    "testing",
    "react-testing",
    "e2e"
  ],
  "author": "Stefano Magni <nori.ste.magni@gmail.com> (https://github.com/NoriSte)",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/NoriSte/reactjsday-2019-testing-course/issues"
  },
  "homepage": "https://github.com/NoriSte/reactjsday-2019-testing-course#readme",
  "devDependencies": {
    "@testing-library/cypress": "5.0.0",
    "chai-subset": "1.6.0",
    "concurrently": "4.1.2",
    "cross-env": "6.0.0",
    "cypress": "3.4.1",
    "cypress-skip-and-only-ui": "1.2.1",
    "gitbook-cli": "2.3.2",
    "gitbook-plugin-copy-code-button": "0.0.2",
    "jest": "24.9.0",
    "jest-watch-typeahead": "0.4.0",
    "npm-run-all": "4.1.5",
    "start-server-and-test": "1.10.0"
  },
  "dependencies": {
    "gitbook-plugin-include": "^0.1.0",
    "gitbook-plugin-include-codeblock": "^3.2.2"
  }
}
